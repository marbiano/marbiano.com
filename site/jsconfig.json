{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": true,
    "target": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@pages/*": ["src/pages/*"],
      "@screens/*": ["src/screens/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "exclude": ["node_modules", ".next", "public"]
}
